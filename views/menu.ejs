<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Menu - Table <%= table_id %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light py-4">

  <div class="container">
    <div class="card shadow mx-auto" style="max-width: 700px;">
      <div class="card-body">
        <h3 class="text-center mb-4">Table <%= table_id %> - Menu</h3>

        <form method="POST" action="/menu/<%= table_id %>">
          <% menuItems.forEach(function(item) { %>
            <div class="row align-items-center mb-3 border-bottom pb-2">
              <div class="col-6">
                <strong><%= item.name %></strong><br>
                <small class="text-muted">$<%= item.price %></small>
              </div>
              <div class="col-6 text-end">
                <input type="number" name="quantities[<%= item._id %>]" value="0" min="0" class="form-control d-inline-block w-50">
                <input type="hidden" name="prices[<%= item._id %>]" value="<%= item.price %>">
                <input type="hidden" name="names[<%= item._id %>]" value="<%= item.name %>">
              </div>
            </div>
          <% }); %>

          <button type="submit" class="btn btn-success w-100 mt-4">âž• Add Order</button>
        </form>
      </div>
    </div>
  </div>

</body>
</html>
