<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Orders</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light py-4">

  <div class="container">
    <h2 class="text-center mb-4">Orders</h2>

    <% orders.forEach((items) => { %>
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title">Order ID: <%= items._id %></h5>
          <p><strong>Table:</strong> <%= items.table_id %></p>
          <p><strong>Status:</strong> <%= items.status_order %></p>

          <ul class="list-group mb-3">
            <% items.order.forEach((item) => { %>
              <li class="list-group-item d-flex justify-content-between">
                <span><%= item.name %></span>
                <span><%= item.quantity %></span>
              </li>
            <% }) %>
          </ul>

          <p><strong>Total:</strong> $<%= items.total_price.toFixed(2) %></p>

          <form action="/<%= items._id %>/done" method="POST">
            <button class="btn btn-success w-100">Mark as Done</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
